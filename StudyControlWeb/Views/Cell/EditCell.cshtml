@model StudyControlWeb.ViewModels.CellViewModel
@{

}
<div class="container">
    <h3 class="text-center p-3">Редактирование пары</h3>
    <form asp-action="EditCell" asp-controller="Cell">
        <div class="invisible">
            <select class="custom-select" asp-for="ScheduleId" asp-items="@ViewBag.ScheduleId">

            </select>
        </div>
        <div class="form-group p-3">
            <label asp-for="WeekNumber">Учебная неделя семестра</label><br />
            <input class="form-control" type="number" asp-for="WeekNumber" />
        </div>
        <div class="form-group p-3">
            <label asp-for="DayOfWeek">День недели</label><br />
            <input class="form-control" type="number" asp-for="DayOfWeek" />
        </div>
        <div class="form-group p-3">
            <label asp-for="LessonNumber">Номер пары</label><br />
            <input class="form-control" type="number" asp-for="LessonNumber" />
        </div>
        <div class="form-group p-3">
            <label>Дисциплина</label>
            <select class="custom-select" asp-for="SubjectTitle" asp-items="@ViewBag.Subjects">

            </select>
        </div>
        <div class="form-group p-3">
            <label>Вид занятия</label>
            <select class="custom-select" asp-for="LessonType" asp-items="@ViewBag.LessonType">

            </select>
        </div>
        <div class="form-group p-3">
            <label asp-for="Classroom">Аудитория</label><br />
            <input class="form-control" type="text" asp-for="Classroom" />
        </div>
        <div class="form-group p-3">
            <input class="btn btn-success" type="submit" value="Сохранить" />
        </div>
    </form>
</div>
