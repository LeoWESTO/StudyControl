@model StudyControlWeb.ViewModels.SubjectViewModel
@{

}
<div class="container">
    <h3 class="text-center p-3">Редактирования дисциплины</h3>
    <form asp-action="EditSubject" asp-controller="Subject">
        <div class="invisible">
            <select class="custom-select" asp-for="AreaId" asp-items="@ViewBag.Areas">

            </select>
        </div>
        <div class="form-group p-3">
            <label asp-for="Title">Название</label><br />
            <input class="form-control" type="text" asp-for="Title" />
        </div>
        <div class="form-group p-3">
            <label>Виды контроля</label>
            <div class="form-check">
                <input asp-for="IsTest" class="form-check-input" type="checkbox" id="flexCheckDefault1">
                <label class="form-check-label" for="flexCheckDefault1">Зачет</label>
            </div>
            <div class="form-check">
                <input asp-for="IsGradingTest" class="form-check-input" type="checkbox" id="flexCheckDefault2">
                <label class="form-check-label" for="flexCheckDefault2">Диф. зачет</label>
            </div>
            <div class="form-check">
                <input asp-for="IsExam" class="form-check-input" type="checkbox" id="flexCheckDefault3">
                <label class="form-check-label" for="flexCheckDefault3">Экзамен</label>
            </div>
            <div class="form-check">
                <input asp-for="IsCourseWork" class="form-check-input" type="checkbox" id="flexCheckDefault4">
                <label class="form-check-label" for="flexCheckDefault4">Курсовая работа</label>
            </div>
        </div>
        <div class="form-group p-3">
            <label asp-for="TermNumber">Номер семестра</label><br />
            <input class="form-control" type="number" asp-for="TermNumber" />
        </div>
        <div class="form-group p-3">
            <label>Преподаватель</label>
            <select class="custom-select" asp-for="TeacherFullName" asp-items="@ViewBag.Teachers">

            </select>
        </div>
        <div class="form-group p-3">
            <input class="btn btn-success" type="submit" value="Сохранить" />
        </div>
    </form>
</div>
