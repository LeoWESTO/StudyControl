@model StudyControlWeb.ViewModels.DepartmentViewModel
@{

}
<div class="container">
    <h3 class="text-center p-3">Добавление кафедры</h3>
    <form asp-action="CreateDepartment" asp-controller="Department">
        <div class="form-group p-3">
            <label asp-for="Title">Название</label><br />
            <input class="form-control" type="text" asp-for="Title" />
        </div>
        <div class="form-group p-3">
            <label>Факультет</label>
            <select class="form-select" asp-for="FacultyTitle" asp-items="@ViewBag.Titles">

            </select>
        </div>
        <div class="form-group p-3">
            <label asp-for="Password">Пароль для входа в структурное подразделение</label><br />
            <input class="form-control" type="text" asp-for="Password" />
        </div>
        <div class="form-group p-3">
            <input class="btn btn-success" type="submit" value="Сохранить" />
        </div>
    </form>
</div>
