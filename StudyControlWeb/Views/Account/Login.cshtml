@model StudyControlWeb.ViewModels.LoginModel

<div class="text-center text-muted">
    <h2>Вход в систему</h2>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="All"></div>
        <div>
            <div class="form-group mb-3">
                <label asp-for="Surname">Фамилия</label>
                <input type="text" class="form-control" asp-for="Surname" />
                <span asp-validation-for="Surname" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Name">Имя</label>
                <input type="text" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Fathername">Отчество</label>
                <input type="text" class="form-control" asp-for="Fathername" />
                <span asp-validation-for="Fathername" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password">Пароль</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Войти" class="btn btn-outline-dark" />
            </div>
        </div>
</form>
</div>
